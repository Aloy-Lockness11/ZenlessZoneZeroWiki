@model ZenlessZoneZeroWiki.Models.Character

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Character Details";
}

<div class="container py-4">
    <h2>@Model.Name</h2>
    <hr />

    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>HP:</strong> @Model.HP</p>
    <p><strong>Attack:</strong> @Model.Attack</p>
    <p><strong>Defence:</strong> @Model.Defence</p>
    <p><strong>Element:</strong> @Model.Element</p>
    <p><strong>Faction:</strong> @Model.faction</p>

    <a asp-action="CharacterListView" class="btn btn-secondary">Back to List</a>
</div>
