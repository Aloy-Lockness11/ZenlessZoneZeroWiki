@model IEnumerable<ZenlessZoneZeroWiki.Models.Character>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Character List";
}

<div class="container py-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
        @foreach (var character in Model)
        {
            <div class="col">
                <div class="card text-center" style="background-color: #1E1E2E; border: none; border-radius: 8px;">
                    <div class="position-relative p-3">

                        <!-- Main Character Image in the center -->
                        <img src="@character.ImageUrllink"
                             alt="@character.Name"
                             class="img-fluid rounded"
                             style="height: 150px; object-fit: cover;" />
                    </div>

                    <div class="card-body">
                        <h5 class="card-title text-white">@character.Name</h5>

                        <!-- "View More Details" button -->
                        <a asp-action="CharacterDetailsView"
                           asp-route-id="@character.CharacterID"
                           class="btn btn-warning btn-sm mt-2">
                            View More Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
