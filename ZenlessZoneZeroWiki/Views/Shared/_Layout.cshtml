<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ZenlessZoneZeroWiki</title>
    <link rel="shortcut icon" href="~/zzzicon.ico" type="image/x-icon" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #000;">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/images/zzzlogo.png" alt="Zenless Zone Zero" style="height: 40px;" />
            </a>

            <!-- Nav Links & Right-Side Button -->
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Homepage</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Characters</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Weapons</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Favourite</a>
                    </li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Login", "Login", "Account")</li>
                </ul>

                <div class="d-flex">
                    <a class="btn btn-warning" href="#" role="button">Download Now</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- HERO SECTION -->
    <div class="hero-section">
        <div class="hero-overlay">
            <h1 class="display-4">Welcome to the Zenless Zone Zero Wiki</h1>
            <p class="lead">Learn about characters, news, media, and more!</p>
        </div>
    </div>

    <!-- MAIN CONTENT -->
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="footer mt-auto py-3 text-center">
        <div class="container">
            <span class="text-muted">&copy; 2025 - ZenlessZoneZeroWiki</span>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
