@model ZenlessZoneZeroWiki.Models.Weapon

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Weapon Details";
}

<div class="container py-4">
    <div class="card border-0" style="background: linear-gradient(90deg, #1E1E2E 0%, #292A3C 100%); border-radius: 12px; position: relative;">

        <span class="position-absolute" style="top: 1rem; right: 1rem; font-size: 1.5rem; color: #fff;">
            <i class="bi bi-stars"></i>
        </span>

        <div class="card-body text-white p-4">
            <!-- Title / Subtitle Row -->
            <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between mb-3">
                <h2 class="mb-0">
                   @Model.Name
                </h2>
                <div class="mt-2 mt-md-0">
                    <!-- Example badges; adjust or remove as needed -->
                    <span class="badge bg-danger me-2">Weapon</span>
                    <span class="badge bg-info">@Model.Type</span>
                </div>
            </div>

            <!-- Main Row: Image + Stats -->
            <div class="row">
                <!-- Left: Weapon Image -->
                <div class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0">
                    <img src="@Model.ImageUrllink"
                         alt="@Model.Name"
                         class="img-fluid rounded"
                         style="max-height: 220px; object-fit: cover;" />
                </div>

                <!-- Right: Stats & Description -->
                <div class="col-md-8">
                    <div class="row g-3">
                        <!-- Attack DMG -->
                        <div class="col-sm-6">
                            <label class="fw-bold d-block">Attack DMG</label>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-danger" role="progressbar"
                                     style="width: @(Model.AttackDMG / 100)%;"></div>
                            </div>
                            <span class="small">@Model.AttackDMG</span>
                        </div>

                        <!-- Defence -->
                        <div class="col-sm-6">
                            <label class="fw-bold d-block">Defence</label>
                            <div class="progress" style="height: 6px;">
                                <div class="progress-bar bg-primary" role="progressbar"
                                     style="width: @(Model.Defence / 100)%;"></div>
                            </div>
                            <span class="small">@Model.Defence</span>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mt-4">
                        <label class="fw-bold d-block">Description</label>
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>

            <!-- Back to List Button -->
            <div class="mt-4">
                <a asp-action="WeaponListView" class="btn btn-secondary">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>
