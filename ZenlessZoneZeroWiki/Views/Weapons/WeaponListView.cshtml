@model IEnumerable<ZenlessZoneZeroWiki.Models.Weapon>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Weapon List";
}

<div class="container py-4 lava-lamp">
    <h2 class="text-white">@ViewData["Title"]</h2>
    <hr />

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
        @foreach (var weapon in Model)
        {
            <div class="col">
                <div class="glow-border">
                    <div class="card weapon-card border-0 glowing-image-container">
                        <span class="position-absolute"
                              style="top: 1rem; left: 1rem; font-size: 1.25rem; color: #fff;">
                            <i class="bi bi-lightning-charge-fill"></i> <!-- Optional: weapon icon -->
                        </span>

                        <div class="card-body text-white d-flex flex-column align-items-center p-4">
                            <!-- Weapon Image -->
                            <img src="@weapon.ImageUrllink"
                                 alt="@weapon.Name"
                                 class="img-fluid rounded mb-3"
                                 style="max-height: 150px; object-fit: cover;" />

                            <!-- Weapon Name -->
                            <h5 class="card-title mb-2">@weapon.Name</h5>

                            <!-- "View More Details" button -->
                            <a asp-action="WeaponDetailsView"
                               asp-route-id="@weapon.WeaponID"
                               class="btn btn-warning btn-sm mt-auto">
                                View More Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
